<?xml version="1.0" ?>
<sdf version="1.5">

  <model name="pushbot">
    <pose>0 0 0 0 0 0</pose>
    <static>false</static>

    <!-- Body: Main Chassis -->
    <link name="chassis">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>130</mass>
        <!-- for a box: ixx = 0.083 * mass * (y*y + z*z)
                        iyy = 0.083 * mass * (x*x + z*z)
                        izz = 0.083 * mass * (x*x + y*y) -->
        <inertia>
          <ixx>1</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>1</iyy>
          <iyz>0</iyz>
          <izz>1</izz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <box>
            <size>0.075 0.065 0.02</size>
          </box>
        </geometry>
      </collision>
      <visual name="chassis">
        <geometry>
          <box>
            <size>0.075 0.065 0.02</size>
          </box>
        </geometry>
      </visual>
    </link>

    <!-- Body: Vertical controller PCB -->
    <link name="top">
      <pose>0 0 0.055 0 0 0</pose>
      <inertial>
        <mass>60</mass>
        <!-- for a box: ixx = 0.083 * mass * (y*y + z*z)
                        iyy = 0.083 * mass * (x*x + z*z)
                        izz = 0.083 * mass * (x*x + y*y) -->
        <inertia>
          <ixx>1</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>1</iyy>
          <iyz>0.0</iyz>
          <izz>1</izz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <box>
            <size>0.01 0.05 0.09</size>
          </box>
        </geometry>
      </collision>
      <visual name="top">
        <geometry>
          <box>
            <size>0.01 0.05 0.09</size>
          </box>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
          <specular>0 0 0 1</specular>
          <emissive>0 1 0.5 1</emissive>
        </material>
      </visual>
    </link>

    <joint name="chassis2top" type="fixed">
      <parent>chassis</parent>
      <child>top</child>
    </joint>

    <!-- Body: Top LED PCB -->
    <link name="led_top">
      <pose> -0.004 0 0.11 0 0 0</pose>
      <collision name="collision">
        <geometry>
          <box>
            <size>0.002 0.05 0.02</size>
          </box>
        </geometry>
      </collision>
      <visual name="led_top">
        <geometry>
          <box>
            <size>0.002 0.05 0.02</size>
          </box>
        </geometry>
      </visual>
    </link>

    <joint name="led_top_joint" type="fixed">
      <parent>top</parent>
      <child>led_top</child>
    </joint>

    <!-- Body: Front Plate -->
    <link name="front">
      <pose> 0.055 0 0.004 0 0 0</pose>
      <inertial>
        <mass>10</mass>
        <inertia>
          <ixx>1</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>1</iyy>
          <iyz>0.0</iyz>
          <izz>1</izz>
        </inertia>
      </inertial>
      <collision name="collision">
        <pose>0 0 0 0 -0.68 0</pose>
        <geometry>
          <box>
            <size>0.001 0.1 0.045</size>
          </box>
        </geometry>
      </collision>
      <visual name="front">
        <pose>0 0 0 0 -0.68 0</pose>
        <geometry>
          <box>
            <size>0.001 0.1 0.045</size>
          </box>
        </geometry>
      </visual>
    </link>

    <joint name="chassis2front" type="fixed">
      <parent>chassis</parent>
      <child>front</child>
    </joint>

    <!-- Back Left Wheel -->
    <link name="back_left_wheel">
      <pose> -0.0175 0.0425 0.003 0 0 0</pose>
      <inertial>
        <mass>25</mass>-->
