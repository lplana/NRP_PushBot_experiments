          <diffuse>0.1 0.1 0.2 1</diffuse>
          <specular>0 0 0 0</specular>
          <emissive>0 0 0 1</emissive>
        </material>
      </visual>
    </link>

    <joint name="back_left_joint" type="revolute">
      <parent>chassis</parent>
      <child>back_left_wheel</child>
      <axis>
      <xyz>0 1 0</xyz>
